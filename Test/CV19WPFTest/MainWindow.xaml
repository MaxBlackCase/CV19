    <CheckBox x:Name="checkBox" Content="CheckBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"/>
    <Slider x:Name="slider" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Width="250"/>
  </StackPanel>
  </Grid>
</Window>
